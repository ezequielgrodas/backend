

<div class="container" style="margin: auto; box-shadow: 2px 2px 2px 1px #333; padding-top:5px" data-aos="fade-up" data-aos-duration="1500">
   
    <div class="row" >
        <div class="col-7">
            <h5>Listado de lanzamientos</h5>

        </div>
        <div class="col text-end">
            <a href="/admin/lanzamientos/agregarlanzamiento" class="btn btn-secondary"><i class="fa fa-plus"></i> Nuevo</a>

        </div>

    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Artista</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Descripcion</th>
                        <th scope="col">Imagen</th>
                        <th scope="col" style="float: right;">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each lanzamientos}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{artista}}</td>
                        <td>{{titulo}}</td>
                        <td>{{descripcion}}</td>
                        <td>{{{imagen}}}</td>

                        <td class="text-end">
                            <a href="/admin/lanzamientos/modificarlanzamiento/{{id}}" title="Editar" class="btn btn-sm btn-secondary"><i class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/lanzamientos/eliminarlanzamiento/{{id}}" title="Eliminar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"></i></a>
                            
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>

        </div>

    </div>
</div>